{
    "private": true,
    "name": "backend-monorepo",
    "workspaces": [
        "packages/api",
        "packages/worker"
    ],
    "scripts": {
        "lint": "eslint . --max-warnings=0",
        "format": "prettier --write .",
        "build": "npm run build -ws",
        "build:api": "npm run build -w packages/api",
        "build:worker": "npm run build -w packages/worker",
        "test": "jest --passWithNoTests",
        "migrate:dev": "prisma migrate dev --schema=prisma/schema.prisma",
        "migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
        "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
        "db_studio": "prisma studio --schema=prisma/schema.prisma"
    },
    "dependencies": {
        "prisma": "^4.10.0",
        "typescript": "^4.9.0",
        "eslint": "^8.0.0",
        "prettier": "^2.8.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "@types/jest": "^29.0.0"
    }
}